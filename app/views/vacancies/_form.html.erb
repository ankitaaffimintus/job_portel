<%= form_for @vacancy, :html => { :class => "form-horizontal vacancy" } do |f| %>

  <% if @vacancy.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@vacancy.errors.count, "error") %> prohibited this vacancy from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @vacancy.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %> <div class="form-group">
  <%= f.label :select_company, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
        <%= f.select :company_id, Company.all.collect { |p| [ p.name, p.id ] },  :class => 'form-control'%>
      </div><

  <div class="form-group">

    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :no_of_vacancy, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :no_of_vacancy, :class => 'form-control' %>
    </div>
    <%=f.error_span(:no_of_vacancy) %>
  </div>
  <div class="form-group">
    <%= f.label :eligibilty, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :eligibilty, :class => 'form-control' %>
    </div>
    <%=f.error_span(:eligibilty) %>
  </div>
  <div class="form-group">
    <%= f.label :technology, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :technology, :class => 'form-control' %>
    </div>
    <%=f.error_span(:technology) %>
  </div>
  <div class="form-group">
    <%= f.label :salary, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :salary, :class => 'form-control' %>
    </div>
    <%=f.error_span(:salary) %>
  </div>
  <div class="form-group">
    <%= f.label :experience, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :experience, :class => 'form-control' %>
    </div>
    <%=f.error_span(:experience) %>
  </div>
  <div class="form-group">
    <%= f.label :key_skilles, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :key_skilles, :class => 'form-control' %>
    </div>
    <%=f.error_span(:key_skilles) %>
  </div>
 

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                vacancies_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

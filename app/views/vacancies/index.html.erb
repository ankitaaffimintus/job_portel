<%- model_class = Vacancy -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:company_name) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:no_of_vacancy) %></th>
      <th><%= model_class.human_attribute_name(:eligibilty) %></th>
      <th><%= model_class.human_attribute_name(:technology) %></th>
      <th><%= model_class.human_attribute_name(:salary) %></th>
      <th><%= model_class.human_attribute_name(:experience) %></th>
      <th><%= model_class.human_attribute_name(:key_skilles) %></th>
      <th><%= model_class.human_attribute_name(:company_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td><%= vacancy.company.name%></td>
        <td><%= vacancy.name %></td>
        <td><%= vacancy.no_of_vacancy %></td>
        <td><%= vacancy.eligibilty %></td>
        <td><%= vacancy.technology %></td>
        <td><%= vacancy.salary %></td>
        <td><%= vacancy.experience %></td>
        <td><%= vacancy.key_skilles %></td>
        <td><%= vacancy.company_id %></td>
        <td><%=l vacancy.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vacancy_path(vacancy), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vacancy_path(vacancy),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_vacancy_path,
            :class => 'btn btn-primary' %>
<%= link_to "search to city",companies_path,:class => 'btn btn-primary'%>
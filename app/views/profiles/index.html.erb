<% if current_user.has_role?(:admin)%>
<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:contact) %></th>
      <th><%= model_class.human_attribute_name(:mark_10th) %></th>
      <th><%= model_class.human_attribute_name(:mark_12th) %></th>
      <th><%= model_class.human_attribute_name(:graduation) %></th>
      <th><%= model_class.human_attribute_name(:gra_mark) %></th>
      <th><%= model_class.human_attribute_name(:post_graduation) %></th>
      <th><%= model_class.human_attribute_name(:post_gra_mark) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to profile.id, profile_path(profile) %></td>
        <td><%= profile.name %></td>
        <td><%= profile.address %></td>
        <td><%= profile.contact %></td>
        <td><%= profile.mark_10th %></td>
        <td><%= profile.mark_12th %></td>
        <td><%= profile.graduation %></td>
        <td><%= profile.gra_mark %></td>
        <td><%= profile.post_graduation %></td>
        <td><%= profile.post_gra_mark %></td>
        <td><%=l profile.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_profile_path(profile), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      profile_path(profile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_profile_path,
            :class => 'btn btn-primary' %>
  <%= link_to "create new company",new_company_path, :class => 'btn btn-primary' %>          
<% end %>

